---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Himanshu Patil | Frontend Developer",
  description = "Frontend developer with 5+ years of experience building modern web applications."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
 